root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,html,md,toml,yaml}]
indent_style = space
indent_size = 2
[{package.json,.prettierrc,.markdownlint.json}]
indent_size = 2
indent_style = space
